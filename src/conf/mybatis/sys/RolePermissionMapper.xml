<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyt.xjj.anes.dao.sys.RolePermissionMapper">


	<sql id="selectColumns">
		ID,
		ROLE_ID as roleId,
		PERMISSION_ID as permissionId,		
		STATUS as status,
		CREATER	as creater,
		CREATE_DT as createDt	
	</sql>
	<!-- 插入列名 -->
	<sql id="insertColumns">
		<trim suffix="" suffixOverrides=",">
			<if test="id != null">ID,</if>
			<if test="roleId != null">ROLE_ID,</if>
			<if test="permissionId != null">PERMISSION_ID,</if>
			<if test="status != null">STATUS,</if>
			<if test="creater != null">CREATER,</if>
			<if test="createDt != null">CREATE_DT</if>
		</trim>
	</sql>
	<!-- 插入列值 -->
	<sql id="insertValues">
		<trim suffix="" suffixOverrides=",">
			<if test="id != null">#{id},</if>
			<if test="roleId != null">#{roleId},</if>
			<if test="permissionId != null">#{permissionId},</if>
			<if test="status != null">#{status},</if>
			<if test="creater != null">#{creater},</if>
			<if test="createDt != null">#{createDt}</if>
		</trim>
	</sql>
	

	<sql id="updateColumns">
		<set>
			<if test="roleId != null">ROLE_ID=#{roleId},</if>
			<if test="permissionId != null">PERMISSION_ID=#{permissionId},</if>
			<if test="status != null">STATUS=#{status},</if>
		</set>
	</sql>
	
	<insert id="insert" keyProperty="id" parameterType="rolePermission">
		INSERT INTO T_SYS_ROLE_PERMISSION(
		<include refid="insertColumns" />
		)
		VALUES(
		<include refid="insertValues" />
		)
	</insert>
	
	<insert id="batchInsert" keyProperty="id" parameterType="list">
		INSERT INTO T_SYS_ROLE_PERMISSION(
			ID,	ROLE_ID,PERMISSION_ID,STATUS,	CREATER,CREATE_DT
		)
		VALUES	
		<foreach collection="list" item="item" index="index" separator=",">
				(#{item.id},#{item.roleId},#{item.permissionId},#{item.status},#{item.creater},#{item.createDt})
		</foreach>
	</insert>

	<update id="update" parameterType="rolePermission">
		<if test="id != null">
			UPDATE T_SYS_ROLE_PERMISSION
			<include refid="updateColumns" />
			WHERE ID=#{id}
		</if>
	</update>
	

	<delete id="delete" parameterType="string">
		UPDATE T_SYS_ROLE_PERMISSION SET STATUS='DEL'WHERE ID = #{id}
	</delete>
	
	<delete id="deleteByRoleId" parameterType="string">
		DELETE from T_SYS_ROLE_PERMISSION WHERE ROLE_ID = #{id}
	</delete>

	<select id="select" parameterType="string" resultType="rolePermission">
		SELECT
		<include refid="selectColumns" />
		FROM T_SYS_ROLE_PERMISSION WHERE ID=#{id}
	</select>

	<select id="selectByRoleId" parameterType="string" resultType="string">
		 SELECT A.PERMISSION_ID 
		from T_SYS_ROLE_PERMISSION A JOIN T_SYS_ROLE B ON(A.ROLE_ID=B.ID) 
		WHERE A.ROLE_ID=#{roleId} and A.STATUS='ON'
	</select>

</mapper>